{
  // 包含指定文件
  "include": ["./src/*", "src/utils/type.ts", "src/utils/dataDeal.ts", "src/utils/commonUtils.ts", "src/utils/beforeSubmitDataDeal.tsx", "src/utils/afterRequestDataDeal.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    // 重定向输出目录
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    // 允许编译javascript文件
    "allowJs": true,
    "moduleResolution": "node",
    // 生成相应的 .d.ts文件
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    // 生成相应的.d.ts.map文件
    // "declarationMap": true,
  }
}